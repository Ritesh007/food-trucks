          "format": "float"
        },
        "Longitude": {
          "type": "number",
          "format": "float"
        },
        "Zip Codes": {
          "type": "number"
        },
        "Approved": {
          "type": "string"
        },
        "ExpirationDate": {
          "type": "string"
        },
        "Fire Prevention Districts": {
          "type": "number"
